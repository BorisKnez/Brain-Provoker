<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:gravity="center" android:id="@+id/linearParent">
  
      <ProgressBar android:layout_width="fill_parent" style="?android:attr/progressBarStyleHorizontal" android:id="@+id/progressbar_Horizontal"
		android:max="60000" android:layout_gravity="top" android:layout_height="wrap_content"/>
	
	
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dip" android:textSize="40px" android:id="@+id/tvSpodaj6"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="40px" android:id="@+id/tvSpodaj5"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="40px" android:id="@+id/tvSpodaj4"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout4" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="40px" android:id="@+id/tvSpodaj3"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout5" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="40px" android:id="@+id/tvSpodaj2"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout6" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">
        <ImageView android:id="@+id/imageView1" android:background="@drawable/desno" android:layout_width="50px" android:layout_height="50px"></ImageView>
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="40px" android:id="@+id/tvSpodaj1"></TextView>
        <ImageView android:id="@+id/imageView2" android:background="@drawable/levo" android:layout_height="50px" android:layout_width="50px"></ImageView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout7" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="20dip" android:gravity="center">
        <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="20dip" android:id="@+id/imbDa" android:background="@drawable/da" android:layout_marginRight="10dip" android:layout_weight="1"></ImageButton>
        <TextView android:layout_marginRight="10dip" android:id="@+id/tvScoreUJemanjeBarv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_weight="1" android:gravity="center" android:textSize="20px"></TextView>
        <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="20dip" android:id="@+id/imbNe" android:background="@drawable/ne" android:layout_weight="1"></ImageButton>
    </LinearLayout>
    
</LinearLayout>
