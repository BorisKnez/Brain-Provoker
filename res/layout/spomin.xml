<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:baselineAligned="true" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/linearLayout1" android:gravity="center" android:layout_marginLeft="10dip">
        <ImageButton android:background="@drawable/green" android:id="@+id/btnZelen" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
        <RelativeLayout android:layout_height="match_parent" android:id="@+id/relativeLayout1" android:layout_width="100dip">
            <TextView android:layout_height="wrap_content" android:text="Level: 1" android:id="@+id/txtPrikazZgoraj" android:layout_marginBottom="40dip" android:textSize="25px" android:layout_marginTop="30dip" android:layout_alignParentLeft="true" android:layout_width="match_parent" android:gravity="center"></TextView>
            <ImageButton android:layout_height="100dip" android:id="@+id/btnRdec" android:layout_width="100dip" android:background="@drawable/red" android:layout_below="@+id/txtPrikazZgoraj" android:layout_alignLeft="@+id/txtPrikazZgoraj" android:layout_alignRight="@+id/txtPrikazZgoraj"></ImageButton>
            <ImageButton android:layout_height="100dip" android:id="@+id/imageButton3" android:layout_width="100dip" android:background="@drawable/center" android:layout_below="@+id/btnRdec" android:layout_alignLeft="@+id/btnRdec" android:layout_alignRight="@+id/btnRdec"></ImageButton>
            <ImageButton android:layout_height="100dip" android:id="@+id/btnRumen" android:layout_width="100dip" android:background="@drawable/yellow" android:layout_below="@+id/imageButton3" android:layout_alignLeft="@+id/imageButton3" android:layout_alignRight="@+id/imageButton3"></ImageButton>
            <TextView android:text="TextView" android:layout_height="wrap_content" android:id="@+id/txtPrikazSpodaj" android:layout_width="wrap_content" android:textSize="21px" android:layout_below="@+id/btnRumen" android:layout_alignLeft="@+id/btnRumen" android:layout_alignRight="@+id/btnRumen" android:gravity="center"></TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/linearLayout3" android:gravity="center" android:layout_marginRight="10dip">
        <ImageButton android:background="@drawable/blue" android:id="@+id/btnModer" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
    </LinearLayout>
</LinearLayout>
