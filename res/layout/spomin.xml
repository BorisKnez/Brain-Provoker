<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent">
    <LinearLayout android:layout_height="fill_parent" android:layout_width="wrap_content" android:layout_marginLeft="10dip" android:gravity="center" android:id="@+id/linearLayout1">
        <ImageButton android:layout_height="100dip" android:id="@+id/btnZelen" android:layout_width="100dip" android:background="@drawable/green"></ImageButton>
    </LinearLayout>
    <RelativeLayout android:layout_width="100dip" android:id="@+id/relativeLayout1" android:layout_height="fill_parent" android:gravity="center">
        <TextView android:text="Level: 1" android:id="@+id/txtPrikazZgoraj" android:layout_marginBottom="15dip" android:layout_width="match_parent" android:layout_alignParentLeft="true" android:gravity="center" android:layout_marginTop="10dip" android:layout_height="wrap_content" android:textSize="20px"></TextView>
        <ImageButton android:layout_alignRight="@+id/txtPrikazZgoraj" android:id="@+id/btnRdec" android:layout_below="@+id/txtPrikazZgoraj" android:layout_width="100dip" android:layout_height="100dip" android:background="@drawable/red" android:layout_alignLeft="@+id/txtPrikazZgoraj"></ImageButton>
        <ImageButton android:layout_alignRight="@+id/btnRdec" android:id="@+id/imageButton3" android:layout_below="@+id/btnRdec" android:background="@drawable/center" android:layout_alignLeft="@+id/btnRdec" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
        <ImageButton android:layout_alignRight="@+id/imageButton3" android:id="@+id/btnRumen" android:layout_below="@+id/imageButton3" android:layout_width="100dip" android:layout_height="100dip" android:background="@drawable/yellow" android:layout_alignLeft="@+id/imageButton3"></ImageButton>
        <TextView android:layout_alignRight="@+id/btnRumen" android:text="TextView" android:id="@+id/txtPrikazSpodaj" android:layout_below="@+id/btnRumen" android:layout_width="wrap_content" android:textSize="21px" android:gravity="center" android:layout_height="wrap_content" android:layout_alignLeft="@+id/btnRumen"></TextView>
    </RelativeLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/linearLayout3" android:gravity="center" android:layout_marginRight="10dip">
        <ImageButton android:background="@drawable/blue" android:id="@+id/btnModer" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
    </LinearLayout>
</LinearLayout>
