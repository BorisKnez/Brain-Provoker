<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:baselineAligned="true" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/linearLayout1" android:gravity="center" android:layout_marginLeft="10dip">
        <ImageButton android:background="@drawable/green" android:id="@+id/btnZelen" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/linearLayout2" android:orientation="vertical" android:gravity="top|center">
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_marginTop="30dip" android:layout_marginBottom="40dip"></TextView>
        <ImageButton android:background="@drawable/red" android:id="@+id/btnRdec" android:layout_width="100dip" android:layout_height="100dip"></ImageButton>
        <ImageButton android:id="@+id/imageButton3" android:background="@drawable/center" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
        <ImageButton android:background="@drawable/yellow" android:id="@+id/btnRumen" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/linearLayout3" android:gravity="center">
        <ImageButton android:background="@drawable/blue" android:id="@+id/btnModer" android:layout_height="100dip" android:layout_width="100dip"></ImageButton>
    </LinearLayout>
</LinearLayout>
